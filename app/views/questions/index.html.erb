<% breadcrumb :questions, @article %>
<div class='content-wrapper'>
	<article class='article-wrapper'>
		<%= render 'shared/articles/article_header', article: @article %>
		<div class='article-body'>
			<div class='article-questions'>
				<header class='article-subhead questions-index'>
					<div class='subhead-top'>
						<div class='subhead-title'>
							Questions
						</div>
						<div class='goback'>
							<%= link_to "Go Back To Article...",  article_path(@article.slug) %>
						</div>
						<div class='ask-question'>
							<a href='#'>
								Ask A Question
							</a>
						</div>
					</div>
					<div class='subhead-bottom'>
						<div class='question-filters'>
							<div class='check-filter'>
								<input type='checkbox' /> 
								Answered
							</div>
							<div class='check-filter'>
								<input type='checkbox' /> 
								Unanswered
							</div>
						</div>
						<div class='order-filters'>
							Order By:
							<a href='#'>Newest</a>
							<a href='#'>Oldest</a>
							<a href='#'>Most Answers</a>
							<a href='#'>Fewest Answers</a>
						</div>
					</div>
				</header>
				<% @questions.each do |q| %>
					<div class='listed-question'>
						<h3>
							<%= q.title %>
						</h3>
						<div class='question-meta'>
							<div class='published'>
								Asked by <%= q.author %> on <%= q.created_at %>
						</div>
					</div>
					<div class='question-content'>
						<p>
							<%= q.content %>
						</p>
					</div>
					<div class='question-comments-opener'>
						<a href='#'>
							Click To View <%= Random.rand(20) %> Answers
						</a>
					</div>
				<% end %>
			</div>
		</div>
	</article>
	<div class='sidebar'>
		<%= render 'shared/articles/show_sidebar', article: @article %>
	</div>
</div>
